<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableView?>
<?import javafx.geometry.Insets?>
<BorderPane fx:controller="ru.mirea.dataapp.controller.MainController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <HBox spacing="5">
                <Label text="URL:"/>
                <TextField fx:id="urlField" />
                <Label text="User:"/>
                <TextField fx:id="userField" />
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" />
                <Button text="Подключиться" onAction="#onConnect" fx:id="connectButton"/>
            </HBox>
            <HBox spacing="5">
                <Label text="Таблица:"/>
                <ComboBox fx:id="tableSelector"/>
                <Button text="Добавить" fx:id="addButton" onAction="#onAdd"/>
                <Button text="Изменить" fx:id="editButton" onAction="#onEdit"/>
                <Button text="Удалить" fx:id="deleteButton" onAction="#onDelete"/>
                <TextField fx:id="searchField" promptText="Имя / название"/>
                <Button text="Найти" onAction="#onSearch" fx:id="searchButton"/>
            </HBox>
        </VBox>

    </top>
    <center>
        <TableView fx:id="tableView"/>
    </center>
</BorderPane>
